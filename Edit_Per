import java.sql.*;
import java.util.Scanner;

public class Edit_Record 
{
	public static Scanner sc = new Scanner(System.in);
	public static String fname,lname,addr,state,email;
	public static double phone;
	public static int zip;

	public static void main(String[] args) throws ClassNotFoundException, SQLException 
	{
		editRecord();
	}
	
	public static int editRecord() throws ClassNotFoundException, SQLException
	{
		String url = "jdbc:mysql://localhost:3306/address_book";
    	String uname = "root";
    	String pass = "";
    	
    	Class.forName("com.mysql.cj.jdbc.Driver");
    	Connection con = DriverManager.getConnection(url,uname,pass);     	
    	String query = "update addrbook set zip=515004 where fname='shreyas'";
    	PreparedStatement ps = con.prepareStatement(query);
    	
    	ps = con.prepareStatement(query);
    	
    	int result = ps.executeUpdate();
    	
    	System.out.println("Number of affected rows:" + result);
 
    	ps.close();
    	con.close();
    	
    	return result;
	}
	
}
